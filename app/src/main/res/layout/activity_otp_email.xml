 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="OTP Email"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="3dp"
        android:background="#ffff"
        android:padding="20dp"
        android:src="@drawable/ic_baseline_west_24" />

    <TextView
        android:id="@+id/textViewInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="16dp"
        android:text="Kode OTP sudah dikirimkan, cek email anda ..."
        android:textSize="16sp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linearLayoutOTP"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/textViewInstruction"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_marginHorizontal="10dp"
            android:id="@+id/editTextOTP1"
            android:layout_width="54dp"
            android:layout_height="64dp"
            android:background="@color/white"
            android:elevation="20dp"
            android:maxLength="1"
            android:textColor="@color/black"
            android:shadowColor="@color/black"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:layout_marginHorizontal="10dp"
            android:id="@+id/editTextOTP2"
            android:layout_width="51dp"
            android:layout_height="64dp"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:elevation="20dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:layout_marginHorizontal="10dp"
            android:id="@+id/editTextOTP3"
            android:layout_width="52dp"
            android:layout_height="64dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:elevation="20dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:layout_marginHorizontal="10dp"
            android:id="@+id/editTextOTP4"
            android:layout_width="57dp"
            android:layout_height="64dp"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:elevation="20dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:layout_marginHorizontal="10dp"
            android:id="@+id/editTextOTP5"
            android:layout_width="55dp"
            android:layout_height="64dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:elevation="20dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="24sp" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Konfirmasi"
        android:layout_marginStart="16dp"
        android:enabled="false"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/btn_large"
        android:layout_below="@id/linearLayoutOTP"/>

   </RelativeLayout>