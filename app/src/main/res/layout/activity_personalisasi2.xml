<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personalisasi2">

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="21dp"
        android:layout_height="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Jadwal Makan"
        android:textSize="24dp"
        android:textColor="@color/dark" />



    <ImageView
        android:id="@+id/imageViewPersonalisasi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBack"
        app:srcCompat="@drawable/personalisasi2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/dark"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Pengaturan Jadwal"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPersonalisasi2" />




    <TextView
        android:id="@+id/textView4"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/inter_light"
        android:gravity="center"
        android:text="Silahkan atur jadwal makanmu agar kami bisa membantu mengingatkanmu sesuai dengan jdawal yang telah anda tentukan"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/button_close"
                android:drawablePadding="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Sarapan"/>
            <EditText
                android:id="@+id/inputSarapan"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColorHint="@color/sky_dark"
                android:fontFamily="@font/inter_medium"
                android:hint="00:00"
                android:inputType="datetime"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/button_close"
                android:drawablePadding="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Makan Siang"/>
            <EditText
                android:id="@+id/inputMakanSiang"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColorHint="@color/sky_dark"
                android:fontFamily="@font/inter_medium"
                android:hint="00:00"
                android:inputType="time"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"

            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/button_close"
                android:drawablePadding="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Makan Malam"/>
            <EditText
                android:id="@+id/inputMakanMalam"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColorHint="@color/sky_dark"
                android:fontFamily="@font/inter_medium"
                android:hint="00:00"
                android:inputType="time"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_plus"
            android:contentDescription="buttonPlus"
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_plus"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linierLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <TextView
            android:id="@+id/textPersonalisasi"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/dark"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/inter_light"
            android:textSize="14sp"
            android:gravity="center"
            android:text="Kalau kamu bingung untuk menentukan jadwal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:fontFamily="@font/inter_light"
                android:textSize="14sp"
                android:text="makan, pakai" />

            <TextView
                android:id="@+id/buttonRekomendasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_primary"
                android:fontFamily="@font/inter_light"
                android:textSize="14sp"
                android:text=" rekomendasi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:fontFamily="@font/inter_light"
                android:textSize="14sp"
                android:text=" aja !" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/button_lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_large"
        android:fontFamily="@font/inter_medium"
        android:letterSpacing="0"
        android:minWidth="328dp"
        android:minHeight="48dp"
        android:text="Lanjut"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linierLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>